<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thank You Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you, your order has been placed."
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="10dp" />

        <!-- Confirmation Email Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="An email confirmation has been sent to you."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="16dp" />

        <!-- Shipping Details Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@android:color/darker_gray">

            <!-- Shipping Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 item will be shipped to:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Address Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amazon Locker - Obidos\n551 Boren Ave N, Seattle, WA 98109-5675\nUnited States"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black" />

            <!-- Delivery Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guaranteed delivery:"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black" />

            <!-- Delivery Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug. 17, 2024"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
